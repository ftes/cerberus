export CERBERUS_CHROME_VERSION=146.0.7680.31
export CERBERUS_FIREFOX_VERSION=148.0
export CERBERUS_GECKODRIVER_VERSION=0.36.0

case "$(uname -s):$(uname -m)" in
  Darwin:arm64)
    chrome_relative="chrome-mac-arm64/Google Chrome for Testing.app/Contents/MacOS/Google Chrome for Testing"
    chromedriver_relative="chromedriver-mac-arm64/chromedriver"
    firefox_relative="payload/Firefox.app/Contents/MacOS/firefox"
    ;;
  Darwin:x86_64)
    chrome_relative="chrome-mac-x64/Google Chrome for Testing.app/Contents/MacOS/Google Chrome for Testing"
    chromedriver_relative="chromedriver-mac-x64/chromedriver"
    firefox_relative="payload/Firefox.app/Contents/MacOS/firefox"
    ;;
  Linux:x86_64|Linux:amd64)
    chrome_relative="chrome-linux64/chrome"
    chromedriver_relative="chromedriver-linux64/chromedriver"
    firefox_relative="payload/firefox/firefox"
    ;;
  *)
    echo "Unsupported platform for Cerberus browser runtime: $(uname -s):$(uname -m)" >&2
    ;;
esac

export CHROME="${PWD}/tmp/chrome-${CERBERUS_CHROME_VERSION}/${chrome_relative}"
export CHROMEDRIVER="${PWD}/tmp/chromedriver-${CERBERUS_CHROME_VERSION}/${chromedriver_relative}"
export FIREFOX="${PWD}/tmp/firefox-${CERBERUS_FIREFOX_VERSION}/${firefox_relative}"
export GECKODRIVER="${PWD}/tmp/geckodriver-${CERBERUS_GECKODRIVER_VERSION}/geckodriver"
